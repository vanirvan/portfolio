---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
}

import { SEO } from "astro-seo";

const {
  title = "Home",
  description = "Vanirvan's Personal Website, Portfolio, and Blog",
  image = "/assets/cover.png",
  url = "",
} = Astro.props;

const imageUrl = new URL(image, "https://vanirvan.my.id").toString();
const urlUrl = new URL(url, "https://vanirvan.my.id").toString();
---

<SEO
  charset="UTF-8"
  title={`${title} | Vanirvan`}
  description={description}
  canonical={urlUrl}
  noindex={false}
  nofollow={false}
  openGraph={{
    basic: {
      title: `${title} | Vanirvan`,
      type: "website",
      image: imageUrl,
      url: urlUrl,
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: urlUrl,
    creator: "Vanirvan",
    title: `${title}  | Vanirvan`,
    image: imageUrl,
    imageAlt: title,
    description,
  }}
  extend={{
    link: [
      // favicon start
